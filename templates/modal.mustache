<div class="modal fade" id="inviteModal" tabindex="-1" role="dialog" aria-labelledby="inviteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="min-height:97.5% !important; height:auto;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inviteModalLabel">{{#str}} invite, local_invites {{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body d-flex flex-column align-items-center justify-content-center justify-content-md-start">
                <form id="userForm" class="d-flex flex-row align-items-center justify-content-between w-100">
                    <div class="d-flex flex-row align-items-center justify-content-between p-2 mb-3 with-border">
                        <input type="email" class="form-control" id="userEmails" placeholder="{{#str}} useremail, local_invites {{/str}}" multiple/>
                        <button class="btn btn-primary" id="addUser" type="submit" disabled>{{#str}} adduser, local_invites {{/str}}</button>
                    </div>
                </form>
                <form id="inviteForm" class="align-items-center justify-content-between w-100">
                    <div id="inviteDetails" class="align-items-center justify-content-between p-2 hidden">
                        <h6>{{#str}} userstoinvite, local_invites {{/str}}</h6>
                        <ul id="userList" class="p-2 mb-3">
                        </ul>
                        <h6>{{#str}} message, local_invites {{/str}}</h6>
                        <textarea class="form-control" id="inviteMessage" placeholder="{{#str}} message, local_invites {{/str}}" rows="4">{{ inviteBody }}</textarea>
                    </div>
                    <button class="btn btn-primary float-right" id="inviteUsers" type="submit" disabled>{{#str}} send, local_invites {{/str}}</button>
                </form>
            </div>
        </div>
    </div>
</div>
